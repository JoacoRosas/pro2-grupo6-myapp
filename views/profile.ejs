<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
    <%- include('./partials/head') %>
<body>
	<!-- Header: Pasado a partials-->
	 <% if (locals.user != undefined) {%>
		<%- include('./partials/headerLogueado') %>
	 <%} else {%>
		<%- include('./partials/header') %>
	 <%} %>

	<!-- /Header -->
	

	<!-- Perfil -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Perfil de: <%= perfil.name%></h2>
                <h2 class="products-title">Email: <%= perfil.email%></h2>
                <h2 class="products-title">Productos que creo <%= perfil.name%></h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < perfil.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= perfil.productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= perfil.productos[i].image %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= perfil.productos[i].name %></h2>
								<p><%= perfil.productos[i].description %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>