<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
    <%- include('./partials/head') %>
<body>
	<!-- Header: Pasado a partials-->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= productos[i].image %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].name %></h2>
								<p><%= productos[i].description %></p>
								<p>Creado por: <%= productos[i].user.name %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<div class="col-12">
				<h2 class="products-title"><a href="/products/register">Agregar Productos (se borra cuando hagamos el header logueado)</a></h2>
			</div>
		
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>